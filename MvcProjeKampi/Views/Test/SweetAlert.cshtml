
@{
    ViewBag.Title = "SweetAlert";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.js"></script>

<br />
<button class="btn btn-primary" id="btn1">Buton1</button>
<button class="btn btn-warning" id="btn2">Buton2</button>
<button class="btn btn-danger" id="btn3">Buton3</button>

<script>
    $("#btn1").click(function () {
        swal("Merhaba Sahra Sözlük");
    });
</script>

<script>
    $("#btn2").click(function () {
        swal("Sahra Sözlük!", "...Güzel bir başlangıç");
    });
</script>

<script>
    $("#btn3").click(function () {
        swal("Tebrikler!", "Başarılı Şekilde Eklendi!", "success");
    });
</script>
